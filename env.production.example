# Laravel Application
APP_NAME="AMT CRM"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.himmanav.com
APP_TIMEZONE=Asia/Kolkata

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=amt_crm_production
DB_USERNAME=amt_crm_user
DB_PASSWORD=
DB_ROOT_PASSWORD=

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (if using S3 for file storage)
AWS_DEFAULT_REGION=ap-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET=

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database-uuids

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Cache Configuration
CACHE_DRIVER=redis

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Broadcasting (if using WebSockets)
BROADCAST_DRIVER=log

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=api.himmanav.com
SESSION_DOMAIN=.himmanav.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://himmanav.com,https://www.himmanav.com

# File Upload
FILESYSTEM_DISK=local
MAX_FILE_SIZE=52428800

# Security
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax 